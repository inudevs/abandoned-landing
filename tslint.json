{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "function-name": false,
    "import-name": false,
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "no-boolean-literal-compare": false,
    "object-literal-sort-keys": [
      true,
      "shorthand-first"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ]
  }
}
